@model IEnumerable<QLCCCC.Models.NguoiDung>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Người Dùng - QLCCCC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(to right, #fdf6e4, #fbe7c6); /* Gradient vàng nhạt sáng */
            font-family: 'Arial', sans-serif;
            color: #8d5524; /* Màu nâu nhạt cho chữ toàn trang */
        }

        .container {
            margin-top: 30px;
            max-width: 1200px;
        }

        .header-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: #d35400; /* Cam đậm sáng */
            margin-bottom: 25px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05); /* Bóng chữ nhẹ */
        }

        .table-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03); /* Bóng đổ nhẹ */
            transition: box-shadow 0.3s ease;
        }

            .table-container:hover {
                box-shadow: 0 6px 14px rgba(0, 0, 0, 0.05); /* Bóng đổ tăng khi hover */
            }

        .btn-create {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 25px;
            font-size: 1rem;
            font-weight: 600;
            color: #fff;
            background: linear-gradient(135deg, #e67e22, #d35400); /* Gradient cam sáng */
            border: none;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-create:hover {
                background: linear-gradient(135deg, #d35400, #c0392b); /* Gradient đậm hơn khi hover */
                text-decoration: none;
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
            }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background-color: #fff;
            border: 1px solid #f5e6cc; /* Viền nhạt đồng bộ với nền */
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                background: linear-gradient(135deg, #f5cba8, #e67e22); /* Gradient cam nhạt */
                color: #fff;
                font-weight: 600;
                padding: 15px;
                text-align: left;
                border-bottom: 2px solid #d35400; /* Viền dưới cam sáng */
            }

            .table tbody td {
                padding: 15px;
                font-size: 1rem;
                color: #8d5524; /* Nâu nhạt */
                border-bottom: 1px solid #f5e6cc;
                background-color: #ffffff; /* Nền trắng */
                transition: background-color 0.3s ease;
            }

            .table tbody tr:last-child td {
                border-bottom: none;
            }

            .table tbody tr:hover td {
                background-color: #fef9f2; /* Nền hover vàng nhạt rất nhẹ */
            }

        .action-links a {
            margin-right: 10px;
            font-size: 0.9rem;
            text-decoration: none;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .action-links a.edit {
                color: #f1c40f; /* Vàng sáng */
            }

                .action-links a.edit:hover {
                    color: #e2b307; /* Vàng đậm hơn khi hover */
                    transform: translateY(-2px);
                }

            .action-links a.delete {
                color: #c0392b; /* Đỏ đậm */
            }

                .action-links a.delete:hover {
                    color: #e74c3c; /* Đỏ sáng hơn khi hover */
                    transform: translateY(-2px);
                }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="header-title">Danh Sách Người Dùng</h2>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Họ Tên</th>
                        <th>Số Điện Thoại</th>
                        <th>Email</th>
                        <th>Loại Người Dùng</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.Email</td>
                            <td>@item.LoaiNguoiDung</td>
                            <td class="action-links">
                                <a href="@Url.Action("Edit", new { id = item.ID })" class="edit">Chỉnh sửa</a> |
                                <a href="@Url.Action("Delete", new { id = item.ID })" class="delete">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="@Url.Action("Create")" class="btn-create">Thêm mới</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>