@model QLCCCC.Models.ChungCu

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi Tiết Chung Cư - QLCCCC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(to right, #fdf6e4, #fef9f2); /* Gradient vàng nhạt sáng nhẹ */
            padding-top: 20px;
            font-family: 'Arial', sans-serif;
            color: #5d4037; /* Nâu nhạt đậm vừa */
        }

        .container {
            max-width: 900px;
            background-color: #ffffff; /* Nền trắng tinh */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05); /* Bóng đổ nhẹ */
            transition: box-shadow 0.3s ease;
        }

            .container:hover {
                box-shadow: 0 6px 14px rgba(0, 0, 0, 0.07); /* Bóng đổ tăng khi hover */
            }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #e67e22; /* Cam nhạt sáng */
            font-weight: 600;
        }

        .apartment-name {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: #d35400; /* Cam đậm sáng */
            margin-bottom: 20px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.03); /* Bóng chữ nhẹ */
        }

        .back-link {
            margin-top: 20px;
            display: block;
            text-align: center;
            text-decoration: none;
            color: #e67e22; /* Cam nhạt sáng */
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .back-link:hover {
                color: #d35400; /* Cam đậm hơn khi hover */
            }

        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fff;
            border: 1px solid #f5e6cc; /* Viền nhạt */
            border-radius: 8px;
            overflow: hidden;
        }

            .info-table th, .info-table td {
                padding: 10px;
                font-size: 0.9rem;
                border: 1px solid #f5e6cc; /* Viền nhạt đồng bộ */
            }

            .info-table th {
                font-weight: 600;
                color: #5d4037; /* Nâu nhạt đậm vừa */
                background-color: #fef9f2; /* Vàng nhạt rất nhẹ */
                width: 30%;
            }

            .info-table td {
                width: 70%;
                color: #8d5524; /* Nâu nhạt */
            }

        .image-gallery {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
        }

            .image-gallery img {
                width: 100%;
                max-width: 700px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05); /* Bóng đổ nhẹ */
                transition: transform 0.3s ease;
            }

                .image-gallery img:hover {
                    transform: scale(1.05); /* Phóng to nhẹ khi hover */
                }

            .image-gallery span {
                font-size: 1rem;
                color: #c0392b; /* Đỏ đậm nhẹ */
                font-style: italic;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="apartment-name">@Model.Ten</div>

        <table class="info-table">
            <tr>
                <th>Địa Chỉ:</th>
                <td>@Model.DiaChi</td>
            </tr>
            <tr>
                <th>Chủ Đầu Tư:</th>
                <td>@Model.ChuDauTu</td>
            </tr>
            <tr>
                <th>Năm Xây Dựng:</th>
                <td>@Model.NamXayDung</td>
            </tr>
            <tr>
                <th>Số Tầng:</th>
                <td>@Model.SoTang</td>
            </tr>
        </table>

        <div>
            @if (Model.HinhAnhChungCus != null && Model.HinhAnhChungCus.Any())
            {
                <div class="image-gallery">
                    @foreach (var hinhAnh in Model.HinhAnhChungCus)
                    {
                        <img src="@hinhAnh.DuongDan" alt="Hình ảnh @Model.Ten" />
                    }
                </div>
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </div>
    </div>

        <div style="margin-top: 20px;">
            <strong style="color: #5d4037;">Mô tả:</strong> <span style="color: #8d5524;">@Model.MoTa</span>
        </div>

        <a class="back-link" asp-action="Index">Quay lại danh sách</a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>