@model IEnumerable<QLCCCC.Models.HoaDonDichVu>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Hóa Đơn Dịch Vụ - QLCCCC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(to right, #fdf6e4, #fbe7c6); /* Gradient vàng nhạt sáng */
            font-family: 'Arial', sans-serif;
            color: #8d5524; /* Màu nâu nhạt cho chữ toàn trang */
        }

        .container {
            margin-top: 30px;
            max-width: 1200px;
        }

        .header-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: #d35400; /* Cam đậm sáng */
            margin-bottom: 25px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05); /* Bóng chữ nhẹ */
        }

        .table-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03); /* Bóng đổ nhẹ */
            transition: box-shadow 0.3s ease;
        }

            .table-container:hover {
                box-shadow: 0 6px 14px rgba(0, 0, 0, 0.05); /* Bóng đổ tăng khi hover */
            }

        .btn-create {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 25px;
            font-size: 1rem;
            font-weight: 600;
            color: #fff;
            background: linear-gradient(135deg, #e67e22, #d35400); /* Gradient cam sáng */
            border: none;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

            .btn-create:hover {
                background: linear-gradient(135deg, #d35400, #c0392b); /* Gradient đậm hơn khi hover */
                text-decoration: none;
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
            }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background-color: #fff;
            border: 1px solid #f5e6cc; /* Viền nhạt đồng bộ với nền */
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                background: linear-gradient(135deg, #f5cba8, #e67e22); /* Gradient cam nhạt */
                color: #fff;
                font-weight: 600;
                padding: 15px;
                text-align: left;
                border-bottom: 2px solid #d35400; /* Viền dưới cam sáng */
            }

            .table tbody td {
                padding: 15px;
                font-size: 1rem;
                color: #8d5524; /* Nâu nhạt */
                border-bottom: 1px solid #f5e6cc;
                background-color: #ffffff; /* Nền trắng */
                transition: background-color 0.3s ease;
            }

            .table tbody tr:last-child td {
                border-bottom: none;
            }

            .table tbody tr:hover td {
                background-color: #fef9f2; /* Nền hover vàng nhạt rất nhẹ */
            }

        .badge {
            font-size: 0.9rem;
            padding: 6px 12px;
            border-radius: 12px;
        }

            .badge.bg-success {
                background-color: #27ae60; /* Xanh lá sáng cho "Đã thanh toán" */
            }

            .badge.bg-warning {
                background-color: #f1c40f; /* Vàng sáng cho "Chưa thanh toán" */
            }

        .action-buttons a, .action-buttons button {
            margin-right: 8px;
            padding: 6px 12px;
            font-size: 0.9rem;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .btn-info {
            background-color: #e67e22; /* Cam nhạt cho "Chi Tiết" */
            border-color: #e67e22;
            color: #fff;
        }

            .btn-info:hover {
                background-color: #d35400; /* Cam đậm hơn khi hover */
                border-color: #d35400;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: #fff;
            }

        .btn-warning {
            background-color: #f1c40f; /* Vàng sáng cho "Sửa" */
            border-color: #f1c40f;
            color: #fff;
        }

            .btn-warning:hover {
                background-color: #e2b307; /* Vàng đậm hơn khi hover */
                border-color: #e2b307;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: #fff;
            }

        .btn-danger {
            background-color: #c0392b; /* Đỏ đậm cho "Xóa" */
            border-color: #c0392b;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #e74c3c; /* Đỏ sáng hơn khi hover */
                border-color: #e74c3c;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: #fff;
            }

        .btn-success {
            background-color: #27ae60; /* Xanh lá sáng cho "Thanh Toán" */
            border-color: #27ae60;
            color: #fff;
        }

            .btn-success:hover {
                background-color: #219653; /* Xanh lá đậm hơn khi hover */
                border-color: #219653;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: #fff;
            }

        ul {
            margin: 0;
            padding-left: 20px;
            font-size: 0.95rem;
            color: #8d5524; /* Nâu nhạt */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="header-title">Danh Sách Hóa Đơn Dịch Vụ</h2>

        <div class="table-container">
            @if (User.IsInRole("Ban quản lý"))
            {
                <a asp-action="Create" class="btn-create">Thêm Mới</a>
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>Chung Cư</th>
                        <th>Căn Hộ</th>
                        <th>Ngày Lập</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Dịch Vụ</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.CanHo?.ChungCu?.Ten ?? "Không có")</td>
                            <td>@(item.CanHo?.MaCan ?? "Không có")</td>
                            <td>@item.NgayLap.ToShortDateString()</td>
                            <td>@item.SoTien.ToString("N0") đ</td>
                            <td>
                                @if (item.TrangThai == "Đã thanh toán")
                                {
                                    <span class="badge bg-success">@item.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@item.TrangThai</span>
                                }
                            </td>
                            <td>
                                @if (item.HoaDonDichVu_DichVus != null && item.HoaDonDichVu_DichVus.Any())
                                {
                                    <ul>
                                        @foreach (var hdv in item.HoaDonDichVu_DichVus)
                                        {
                                            <li>@hdv.DichVu?.TenDichVu</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>Không có dịch vụ</span>
                                }
                            </td>
                            <td class="action-buttons">
                                <a asp-action="Detail" asp-route-id="@item.ID" class="btn btn-info btn-sm">Chi Tiết</a>

                                @if (User.IsInRole("Ban quản lý"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bạn có chắc muốn xóa hóa đơn này?');">Xóa</a>
                                }

                                @if (User.IsInRole("Cư dân") && item.TrangThai == "Chưa thanh toán")
                                {
                                    <form asp-action="ThanhToan" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@item.ID" />
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>