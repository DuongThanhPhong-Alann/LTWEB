@model IEnumerable<QLCCCC.Models.TinTuc>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Khám Phá Tin Tức - QLCCCC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(to right, #fdf6e4, #fbe7c6);
            font-family: 'Arial', sans-serif;
            color: #8d5524;
        }

        .container {
            margin-top: 30px;
            max-width: 1300px;
        }

        .header-container {
            position: relative;
            width: 100%;
            height: 300px;
            margin-bottom: 20px;
        }

        .header-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03);
        }

        .header-title {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 2.5rem;
            font-weight: 700;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            text-align: center;
            z-index: 1;
        }

        .table-container {
            margin: 20px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03);
            padding: 20px;
            transition: box-shadow 0.3s ease;
        }

            .table-container:hover {
                box-shadow: 0 6px 14px rgba(0, 0, 0, 0.05);
            }

        .btn-primary {
            margin-bottom: 20px;
            background: linear-gradient(135deg, #e67e22, #d35400);
            border: none;
            padding: 10px 20px;
            font-weight: 600;
            color: #fff;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #d35400, #c0392b);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                color: #fff;
            }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background-color: #fff;
            border: 1px solid #f5e6cc;
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead th {
                background: linear-gradient(135deg, #f5cba8, #e67e22);
                color: #fff;
                font-weight: 600;
                padding: 15px;
                text-align: left;
                border-bottom: 2px solid #d35400;
            }

            .table tbody td {
                padding: 15px;
                font-size: 1rem;
                color: #8d5524;
                border-bottom: 1px solid #f5e6cc;
                background-color: #ffffff;
                transition: background-color 0.3s ease;
            }

            .table tbody tr:last-child td {
                border-bottom: none;
            }

            .table tbody tr:hover td {
                background-color: #fef9f2;
            }

        .btn-sm {
            padding: 6px 12px;
            font-size: 0.9rem;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .btn-warning {
            background-color: #f1c40f;
            border-color: #f1c40f;
            color: #fff;
        }

            .btn-warning:hover {
                background-color: #e2b307;
                border-color: #e2b307;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-danger {
            background-color: #c0392b;
            border-color: #c0392b;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #e74c3c;
                border-color: #e74c3c;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .info-box {
            display: flex;
            background-color: #ffffff;
            border: 1px solid #f5e6cc;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03);
            text-decoration: none;
            color: #8d5524;
            transition: all 0.3s ease;
            width: 100%;
            flex-direction: row; /* Hiển thị ngang: hình ảnh bên trái, nội dung bên phải */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

            .info-box:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.06);
                border-color: #e67e22;
            }

            .info-box img {
                max-width: 30%; /* Hình ảnh chiếm 30% chiều rộng của ô */
                height: auto;
                border-radius: 10px;
                margin-right: 20px;
                transition: transform 0.3s ease;
            }

            .info-box:hover img {
                transform: scale(1.05);
            }

        .info-box-content {
            flex: 1;
        }

        .info-box h5 {
            margin: 10px 0;
            font-size: 1.8rem;
            font-weight: 600;
            color: #d35400;
        }

        .info-box .date {
            font-size: 0.95rem;
            color: #8d5524;
            margin-top: 5px;
        }

        .info-box .description {
            font-size: 1rem;
            color: #8d5524;
            margin-top: 10px;
            line-height: 1.4;
            overflow: hidden; /* Ẩn nội dung vượt quá */
            text-overflow: ellipsis; /* Thêm dấu ... khi nội dung bị cắt */
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Giới hạn số dòng hiển thị */
            -webkit-box-orient: vertical;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .col-md-12 {
            flex: 0 0 100%; /* Mỗi ô chiếm 100% chiều rộng, tức là 1 ô trên 1 hàng */
            max-width: 100%;
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Container cho hình ảnh và tiêu đề -->
        <div class="header-container">
            <img src="~/images/Tintuc.jpg" alt="Hình ảnh đầu trang Tin Tức" class="header-image" />
            <h1 class="header-title">Khám Phá Tin Tức</h1>
        </div>

        @if (User.IsInRole("Ban quản lý"))
        {
            <div class="table-container">
                <a asp-action="Create" class="btn btn-primary mb-3">Thêm Tin Tức</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tiêu Đề</th>
                            <th>Ngày Đăng</th>
                            <th>Ngày Sự Kiện</th>
                            <th>Hình Ảnh</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "TinTuc", new { id = item.ID })" style="color: #8d5524;">@item.TieuDe</a>
                                </td>
                                <td>@item.NgayDang.ToString("dd/MM/yyyy")</td>
                                <td>@(item.NgaySuKien?.ToString("dd/MM/yyyy") ?? "Không có")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        <img src="@item.HinhAnh" alt="@item.TieuDe" style="max-width: 100px; height: auto;" />
                                    }
                                    else
                                    {
                                        <span>Không có hình ảnh</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Hiển thị ô tin tức cho tất cả người dùng -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12">
                    <a href="@Url.Action("Details", "TinTuc", new { id = item.ID })" class="info-box">
                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                        {
                            <img src="@item.HinhAnh" alt="@item.TieuDe" />
                        }
                        else
                        {
                            <img src="~/images/default-news.jpg" alt="Hình ảnh mặc định" />
                        }
                        <div class="info-box-content">
                            <h5>@item.TieuDe</h5>
                            <p class="date"><strong>Ngày Đăng:</strong> @item.NgayDang.ToString("dd/MM/yyyy")</p>
                            <p class="date"><strong>Ngày Sự Kiện:</strong> @(item.NgaySuKien?.ToString("dd/MM/yyyy") ?? "Không có")</p>
                            <p class="description">
                                @{
                                    var maxLength = 100; // Giới hạn số ký tự tối đa
                                    var shortDescription = item.NoiDung.Length > maxLength ? item.NoiDung.Substring(0, maxLength) + "..." : item.NoiDung;
                                }
                                @shortDescription
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>