@model QLCCCC.Models.DichVu

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chi Tiết Dịch Vụ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 30px;
            max-width: 900px;
        }

        .details-container {
            background: #fff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .service-name {
            font-size: 2.5rem; /* Tăng kích thước chữ */
            font-weight: 700; /* Làm chữ đậm hơn */
            color: #2c3e50; /* Màu xanh đậm */
            margin-bottom: 25px;
            padding: 15px 30px; /* Tăng padding */
            background: linear-gradient(135deg, #e9ecef, #f8f9fa); /* Gradient nền */
            border: 2px solid #2c3e50; /* Viền đậm */
            border-radius: 8px; /* Bo góc lớn hơn */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ */
            display: inline-block;
            transition: all 0.3s ease; /* Hiệu ứng mượt */
        }

            .service-name:hover {
                transform: translateY(-3px); /* Nhấc lên khi hover */
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Tăng bóng đổ */
                background: linear-gradient(135deg, #f8f9fa, #e9ecef); /* Đổi chiều gradient */
            }

        .image-gallery {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
        }

            .image-gallery img {
                width: 100%; /* Phóng to hết chiều rộng */
                max-width: 900px; /* Giới hạn tối đa bằng container */
                height: auto;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease;
            }

                .image-gallery img:hover {
                    transform: scale(1.05);
                }

            .image-gallery span {
                font-size: 1rem;
                color: #dc3545;
                font-style: italic;
            }

        .description-section {
            margin-top: 20px;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }

            .description-section h4 {
                font-size: 1.25rem;
                color: #34495e;
                margin-bottom: 10px;
            }

            .description-section p {
                font-size: 1rem;
                color: #555;
                margin: 0;
            }

        .action-buttons {
            margin-top: 20px;
            text-align: center;
        }

        .btn-custom {
            padding: 10px 25px;
            font-size: 1rem;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="details-container">
            <div class="service-name">@Model.TenDichVu</div>

            <div class="image-gallery">
                @if (Model.HinhAnhDichVus != null && Model.HinhAnhDichVus.Any(h => !string.IsNullOrEmpty(h.DuongDan)))
                {
                    @foreach (var hinhAnh in Model.HinhAnhDichVus.Where(h => !string.IsNullOrEmpty(h.DuongDan)))
                    {
                        <img src="@Url.Content(hinhAnh.DuongDan)" alt="Hình ảnh @Model.TenDichVu" />
                    }
                }
                else
                {
                    <span>Không có hình ảnh</span>
                }
            </div>

            <div class="description-section">
                <h4>Mô Tả</h4>
                <p>@Model.MoTa</p>
            </div>

            <div class="action-buttons">
                <a asp-action="Index" class="btn btn-secondary btn-custom">Quay lại</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>